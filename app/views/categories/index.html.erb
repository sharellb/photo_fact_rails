<h1>Listing categories</h1>


    <% @categories.each do |category| %>

        <%= link_to category.name, category %>
        <% facts = Fact.where(:category_id => category.id) %>
        <% facts.each do |fact| %>
          <p><%= fact.info %></p>
        <% end %>
    <% end %>

<br>

